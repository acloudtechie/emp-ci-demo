<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suppressions PUBLIC "-//Puppy Crawl//DTD Suppressions 1.1//EN" "puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>

    <!-- Suppressions for files under target/build folder -->
    <suppress checks=".+" files="[/\\]build[/\\]"/>

    <!-- Suppressions for JUnit classes  -->

    <suppress checks="JavadocMethod" files=".*(?:Test)\.java$"/>
    <suppress checks="JavadocStyle" files=".*(?:Test)\.java$"/>
    <suppress checks="MethodName" files=".*(?:Test)\.java$"/>
    <suppress checks="TypeName" files=".*(?:Test)\.java$"/>
    <suppress checks="AvoidStarImport" files=".*(?:Test)\.java$"/>
    <suppress checks="JavadocPackage" files=".*(?:Test)\.java$"/>
    <suppress checks="JavadocVariable" files=".*(?:Test)\.java$"/>
    <suppress checks="VisibilityModifier" files=".*(?:Test)\.java$"/>

    <!-- Suppressions for misc. files & file types -->

    <suppress checks="[a-zA-Z0-9]*" files=".resources\.*"/>
    <suppress checks="[a-zA-Z0-9]*" files=".*\.(?:xml|txt|bsh|ser|jar|DS_Store)"/>
    <suppress checks="RegexpHeader" files=".*\.feature"/>

</suppressions>
